func say_hello(): Bool {
    println("Hello");
    return true;
}

func say_goodbye(): Bool {
    println("goodbye");
    return false;
}

func main() {
    println(say_hello() or say_goodbye());
    println("---");
    println(say_hello() and say_goodbye());
    println("---");

    if say_goodbye() or say_hello() {
        println("");
    }
    println("---");

    if say_goodbye() and say_hello() {
        println("");
    }
    println("---");
}
